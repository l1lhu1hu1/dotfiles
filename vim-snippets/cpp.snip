snippet co
abbr cout
alias dbv
  cout << ${1} << endl;

snippet dbg
abbr cout with ####
  cout << "###############" << endl;
  cout << ${1} << endl;
  cout << "###############" << endl;

snippet dbs
abbr cout ###
  cout << "###############" << endl;
  cout << "###############" << endl;

snippet ci
abbr cin
  ${1} ${2};
  cin >> $2;

snippet rep
abbr rep
  rep(${1}, ${2}) {
    ${3};
  }

snippet whi
abbr while
  while(${1}) {
    ${2};
  }

snippet if
abbr if
  if(${1}) {
    ${2}
  }
