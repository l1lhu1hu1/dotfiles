function makec(){
  cp -i $d/useful/ccc.c $PWD/$*.c;
  vim $PWD/$*.c;
}

function makepmemo(){
  dir_name=$(basename $PWD)
  cp -i $IMP/for_papers/paper_memo_template.md $PWD/$dir_name.md;
  vim $PWD/$dir_name.md;
}

function makebmemo(){
  dir_name=$*
  cp -i $IMP/for_papers/book_memo_template.md $PWD/$dir_name.md;
  vim $PWD/$dir_name.md;
}

function makecpp(){
  cp -i $d/useful/ccc.cpp $PWD/$*.cpp;
  vim $PWD/$*.cpp;
}

