d="/Users/$(whoami)/Desktop/"
alias r=reset
alias chb='chsh -s /bin/bash'
alias chz='chsh -s /bin/zsh'
alias cra='create-react-app'
alias desk='cd $d'
alias ee=exit
alias vim=nvim
alias vi=nvim
alias vimrc='vi ~/dotfiles/init.vim'
alias bashrc='vim ~/.bashrc'
alias zshrc='vim ~/dotfiles/.zshrc'
alias g=open -a
